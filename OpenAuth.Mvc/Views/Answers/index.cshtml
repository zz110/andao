@{
  Layout = "~/Views/Shared/_adminLTELayout.cshtml";
}


<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="col-xs-12">
                    <div class="col-xs-1" id="menuList">
                    </div>
                    <div class="col-xs-2">
                        <select id="role" onchange="role_select(this.options[this.options.selectedIndex].value)" class="form-control">
                            <option value="">请选择职务</option>
                            <option value="中层正职">中层正职</option>
                            <option value="中层副职">中层副职</option>
                            <option value="一般干部">一般干部</option>
                        </select>
                    </div>
                    <div class="col-xs-2">
                        <select id="DeptType" onchange="dept_type_select(this.options[this.options.selectedIndex].value)" class="form-control">
                            <option value="">请选择部门类型</option>
                            <option value="车间">车间</option>
                            <option value="专业科室">专业科室</option>
                            <option value="综合科室">综合科室</option>
                        </select>
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="EvaluateYear" autocomplete="off" class="form-control" placeholder="请输入年份">
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="UserName" autocomplete="off" class="form-control" placeholder="请输入被评测姓名">
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="OrgName" autocomplete="off" class="form-control" placeholder="请输入部门">
                    </div>
                    <div class="col-xs-1">
                        <button class="btn btn-sm btn-primary" id="btnSearch">搜索</button>
                    </div>
                </div>
                <div class="col-xs-12" style="margin-top:5px">
                    <div class="col-xs-1">
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="PlanName" autocomplete="off" class="form-control" placeholder="请输入方案名称">
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.box-body -->
</div>

<div class="box box-default">
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <table id="tbList" data-reorderable-columns="true" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;"></table>
        </div>
    </div>
</div>

@section scripts
{


    <script src="~/static/app/app.js"></script>
    <script>

        var _dataTable;
        var role = '';
        var deptType = '';
        var tbOpts = {
            type: 'csv',
            fileName: '月度考核成绩排名',
        }

        var QueryObj = {};


        $(function () {

            $("#menuList").loadMenus("evaluate_statistic_analysis");

            var date = new Date();
            var fullYear = date.getFullYear();
            var month = date.getMonth() + 1;

            $("#EvaluateYear").val(fullYear);
            $("#EvaluateMonth").val(month);

            var tbOptions = {
                pageList: [1],
                pageSize: 100,
                pageIndex:1,
                columns: [
                    {
                        field: 'PlanName',
                        title: '方案名称'
                    },
                    {
                        field: 'RatersName',
                        title: '评测人'
                    },
                    {
                        field: 'JudgeName',
                        title: '被评测人'
                    },
                    {
                        field: 'Q1',
                        title: '德',
                        formatter:
                            function (value, row, index) {
                                if (value == "10")
                                    value = "好";
                                if (value == "11")
                                    value = "中";
                                if (value == "12")
                                    value = "差";

                                return value;
                            }
                    },
                    {
                        field: 'Q2',
                        title: '能',
                        formatter:
                            function (value, row, index) {
                                if (value == "10")
                                    value = "好";
                                if (value == "11")
                                    value = "中";
                                if (value == "12")
                                    value = "差";

                                return value;
                            }
                    },
                    {
                        field: 'Q3',
                        title: '勤',
                        formatter:
                            function (value, row, index) {
                                if (value == "10")
                                    value = "好";
                                if (value == "11")
                                    value = "中";
                                if (value == "12")
                                    value = "差";

                                return value;
                            }
                    },
                    {
                        field: 'Q4',
                        title: '绩',
                        formatter:
                            function (value, row, index) {
                                if (value == "10")
                                    value = "好";
                                if (value == "11")
                                    value = "中";
                                if (value == "12")
                                    value = "差";

                                return value;
                            }
                    },
                    {
                        field: 'Q5',
                        title: '廉',
                        formatter:
                            function (value, row, index) {
                                if (value == "10")
                                    value = "好";
                                if (value == "11")
                                    value = "中";
                                if (value == "12")
                                    value = "差";

                                return value;
                            }
                    },
                    {
                        field: 'Q6',
                        title: '综合评价',
                        formatter:
                            function (value, row, index) {
                                if (value == "10")
                                    value = "优秀";
                                if (value == "11")
                                    value = "称职";
                                if (value == "12")
                                    value = "基本称职";
                                if (value == "13")
                                    value = "不称职";

                                return value;
                            }
                    },
                    {
                        field: 'Optime',
                        title: '答题完成时间'
                    },
                    {
                        field: 'State',
                        title: '状态'
                    }]
            }

            App.init();

            App.setExportOptions(tbOpts);

            _dataTable = App.initTable('/Answers/Load', tbOptions);

            _dataTable.SetParameters({
                EvaluateYear: fullYear,
                EvaluateMonth: month,
                role: $("#role").val(),
                DeptType: $("#DeptType").val(),
                UserName: $("#UserName").val(),
                OrgName: $("#OrgName").val(),
                PlanName: $("#PlanName").val()
            });

            _dataTable.Init();


            $("#btnSearch").click(function () {

                var EvaluateYear = parseInt($("#EvaluateYear").val());

                if (isNaN(EvaluateYear) || (EvaluateYear < 1977 || EvaluateYear > 9999)) {

                    swal("提示", "请输入合法的年份", "warning");
                    return;
                }

                QueryObj = {
                    EvaluateYear: $("#EvaluateYear").val(),
                    EvaluateMonth: $("#EvaluateMonth").val(),
                    role: $("#role").val(),
                    DeptType: $("#DeptType").val(),
                    UserName: $("#UserName").val(),
                    OrgName: $("#OrgName").val(),
                    PlanName: $("#PlanName").val()
                };


                _dataTable.SetParameters(QueryObj);
                _dataTable.Refresh();
            });
        });


        function DoOnMsoNumberFormat(cell, row, col) {

            var result = "";
            if (row > 0 && col >= 3)
                result = "0\.00";
            return result;
        }

        function role_select(value) {

            QueryObj = {
                EvaluateYear: $("#EvaluateYear").val(),
                EvaluateMonth: $("#EvaluateMonth").val(),
                role: value,
                DeptType: $("#DeptType").val(),
                UserName: $("#UserName").val(),
                OrgName: $("#OrgName").val(),
                PlanName: $("#PlanName").val()
            };

            _dataTable.SetParameters(QueryObj);
            _dataTable.Refresh();
        }

        function dept_type_select(value) {

            QueryObj = {
                EvaluateYear: $("#EvaluateYear").val(),
                EvaluateMonth: $("#EvaluateMonth").val(),
                role: $("#role").val(),
                DeptType: value,
                UserName: $("#UserName").val(),
                OrgName: $("#OrgName").val(),
                PlanName: $("#PlanName").val()
            };

            _dataTable.SetParameters(QueryObj);
            _dataTable.Refresh();
        }

    </script>

}


