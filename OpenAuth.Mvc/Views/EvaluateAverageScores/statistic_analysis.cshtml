
@{
    ViewBag.Title = "统计分析";
    Layout = "~/Views/Shared/_adminLTELayout.cshtml";
}

<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="col-xs-12">
                    <div class="col-xs-2" id="menuList">
                    </div>
                    <div class="col-xs-2">
                        <select id="role" onchange="role_select(this.options[this.options.selectedIndex].value)" class="form-control">
                            <option value="">请选择职务</option>
                            <option value="正职">正职</option>
                            <option value="副职">副职</option>
                            <option value="一般干部">一般干部</option>
                        </select>
                    </div>
                    <div class="col-xs-1">
                        <input type="text" id="EvaluateYear"  autocomplete="off" class="form-control" placeholder="请输入年份">
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="search"  autocomplete="off" class="form-control" placeholder="请输入搜索关键字">
                    </div>
                    <div class="col-xs-1">
                        <button class="btn btn-sm btn-primary" id="btnSearch">搜索</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>

<div class="box box-default">
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <table id="tbList" data-reorderable-columns="true" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;"></table>
        </div>
    </div>
</div>

@section scripts
{
   
    
    <script src="~/static/app/app.js"></script>
    <script>

        var _dataTable;
        var role = '';
        var tbOpts = {
            type: 'csv',
            fileName: '平均分统计分析',
        }

        var QueryObj = {
            EvaluateYear: $("#EvaluateYear").val(),
            search: $("#search").val(),
            role: $("#role").val()
        };
   

        $(function () {

            $("#menuList").loadMenus("evaluate_statistic_analysis");

            var date = new Date();
            var fullYear = date.getFullYear();
          

            $("#EvaluateYear").val(fullYear);

            var tbOptions = {
                pageList: [10000],
                pageSize: 10000,
                columns: [
                    {
                        field: 'Num',
                        title: '排名'
                    },
                    {
                        field: 'UserName',
                        title: '姓名'
                    }, {
                        field: 'OrgName',
                        title: '部门'
                    }, {
                        field: '_1',
                        title: '1月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    }, {
                        field: '_2',
                        title: '2月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_3',
                        title: '3月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_4',
                        title: '4月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_5',
                        title: '5月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_6',
                        title: '6月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_7',
                        title: '7月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_8',
                        title: '8月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_9',
                        title: '9月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_10',
                        title: '10月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_11',
                        title: '11月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: '_12',
                        title: '12月',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }
                    },
                    {
                        field: 'Average',
                        title: '平均分',
                        formatter: function (value, row, index) {
                            return value.toFixed(2);
                        }

                    }]
            }

            App.init();

            App.setExportOptions(tbOpts);


            _dataTable = App.initTable('/EvaluateAverageScores/get_statistic_analysis_data', tbOptions);

            _dataTable.SetParameters({
                EvaluateYear: fullYear
            });

            _dataTable.Init();


            $("#btnSearch").click(function () {

                var EvaluateYear = parseInt($("#EvaluateYear").val());
             
                if (isNaN(EvaluateYear) || (EvaluateYear < 1977 || EvaluateYear > 9999)) {

                    swal("提示", "请输入合法的年份", "warning");
                    return;
                }

                QueryObj = {
                    EvaluateYear: $("#EvaluateYear").val(),
                    search: $("#search").val(),
                    role: $("#role").val()
                };

                _dataTable.SetParameters(QueryObj);

                _dataTable.Refresh();
            });
        });


        function DoOnMsoNumberFormat(cell, row, col) {

            var result = "";
            if (row > 0 && col >= 3)
                result = "0\.00";
            return result;
        }

        function role_select(value) {
            
            role = value;
            if ('' !== value) {
                tbOpts.fileName = value;
            }
            else {
                tbOpts.fileName = '平均分统计分析';
            }
            App.setExportOptions(tbOpts);

            QueryObj = {
                EvaluateYear: $("#EvaluateYear").val(),
                search: $("#search").val(),
                role: $("#role").val()
            };

            _dataTable.SetParameters(QueryObj);
            _dataTable.Refresh();
        }

    </script>

}