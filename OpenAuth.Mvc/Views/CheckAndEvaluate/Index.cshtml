
@{
    ViewBag.Title = "干部考评分";
    Layout = "~/Views/Shared/_adminLTELayout.cshtml";
}

<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="col-xs-12">
                    <div class="col-xs-2" id="menuList">
                    </div>
                    <div class="col-xs-2">
                        <select class="form-control" id="yearSelect">
                            <option value="">不限年份</option>
                            <option value="2017">2017年</option>
                            <option value="2018">2018年</option>
                            <option value="2019">2019年</option>
                        </select>
                    </div>
                    <div class="col-xs-2">
                        <select class="form-control" id="positionSelect">
                            <option value="">不限职位</option>
                            <option value="正职">正职</option>
                            <option value="其他">其他</option>
                        </select>
                    </div>
                    <div class="col-xs-1">
                        <input type="text" id="userName" autocomplete="off" class="form-control" placeholder="请输入姓名">
                    </div>
                    <div class="col-xs-1">
                        <button class="btn btn-sm btn-primary" id="btnSearch">搜索</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>

<div class="box box-default">
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <table id="tbList" data-reorderable-columns="true" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;"></table>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/static/app/app.js"></script>
    <script>
        var _dataTable;
        $(function () {
            $("#menuList").loadMenus("MonthlyAssessment");
            var tbOptions = {
                pageList: [10000],
                pageSize: 10000,
                columns: [
                    {
                        checkbox: true
                    }, {
                        visible: false,
                        field: 'Id'
                    }, {
                        field: 'AccessmentScore',
                        title: '主管领导评价得分'
                    }, {
                        field: 'RatersId',
                        title: '评分人Id'
                    }, {
                        field: 'RatersName',
                        title: '评分人姓名'
                    }, {
                        field: 'JudgeId',
                        title: '受评人Id'
                    }, {
                        field: 'JudgeName',
                        title: '受评人姓名'
                    }, {
                        field: 'Optime',
                        title: '操作时间'
                    },
                    {
                        field: 'State',
                        title: '状态'
                    }]
            };
            App.init({
                title: '主管评分成绩单',
                width: '75%',
                height: '95%',
                form_url: '/CheckAndEvaluate/List/',
                delete_url: '/CheckAndEvaluate/Delete'
            });

            _dataTable = App.initTable('/CheckAndEvaluate/List', tbOptions);

            _dataTable.Init();
        })
    </script>
}
