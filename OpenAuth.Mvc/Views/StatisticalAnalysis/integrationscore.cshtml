
@{
    ViewBag.Title = "综合得分";
    Layout = "~/Views/Shared/_adminLTELayout.cshtml";
}



<div class="box box-default">
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="col-xs-12">
                    <div class="col-xs-2" id="menuList">
                    </div>
                    <div class="col-xs-1">
                        <input type="text" id="EvaluateYear" autocomplete="off" class="form-control" placeholder="请输入年份">
                    </div>
                    <div class="col-xs-2">
                        <select id="DeptType" onchange="dept_type_select(this.options[this.options.selectedIndex].value)" class="form-control">
                            <option value="">请选择部门类别</option>
                            <option value="车间">车间</option>
                            <option value="专业科室">专业科室</option>
                            <option value="综合科室">综合科室</option>
                        </select>
                    </div>
                    <div class="col-xs-1">
                        <button class="btn btn-sm btn-primary" id="btnSearch">搜索</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>

<div class="box box-default">
    <div class="row">
        <div class="col-xs-12 col-sm-12">
            <table id="tbList" data-reorderable-columns="true" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;"></table>
        </div>
    </div>
</div>

@section scripts
{


    <script src="~/static/app/app.js"></script>
    <script>

        var _dataTable;
        var role = '';
        var tbOpts = {
            type: 'excel',
            fileName: '综合得分',
        }

        var QueryObj = {
            EvaluateYear: $("#EvaluateYear").val()
        };


        $(function () {

            $("#menuList").loadMenus("evaluationscore");

            var date = new Date();
            var fullYear = date.getFullYear();


            $("#EvaluateYear").val(fullYear);

            var tbOptions = {
                pageList: [10000],
                pageSize: 10000,
                columns: [


                    [
                        {
                            field: 'Num',
                            title: "排名",
                            valign: "middle",
                            align: "center",
                            colspan: 1,
                            rowspan: 2
                        },
                        {
                            field: 'Name',
                            title: "姓名",
                            valign: "middle",
                            align: "center",
                            colspan: 1,
                            rowspan: 2
                        },
                        {
                            field: 'XRank',
                            title: "职务",
                            valign: "middle",
                            align: "center",
                            colspan: 1,
                            rowspan: 2
                        },
                        {
                            title: "综合评价",
                            valign: "middle",
                            align: "center",
                            colspan: 6,
                            rowspan: 1
                        },
                        {
                            field: '综合得分',
                            title: "综合得分",
                            valign: "middle",
                            align: "center",
                            colspan: 1,
                            rowspan: 2
                        }
                    ],
                    [
                        {
                            field: '优秀',
                            title: '优秀',
                            valign: "middle",
                            align: "center"
                        },
                        {
                            field: '称职',
                            title: '称职',
                            valign: "middle",
                            align: "center"
                        },
                        {
                            field: '优秀称职率',
                            title: '优秀称职率',
                            valign: "middle",
                            align: "center"
                        },
                        {
                            field: '基本称职',
                            title: '基本称职',
                            valign: "middle",
                            align: "center"
                        },
                        {
                            field: '不称职',
                            title: '不称职',
                            valign: "middle",
                            align: "center"
                        },
                        {
                            field: '不称职率',
                            title: '不称职率',
                            valign: "middle",
                            align: "center"
                        }
                        

                    ]

                ]

            }

            App.init();

            App.setExportOptions(tbOpts);


            _dataTable = App.initTable('/StatisticalAnalysis/get_integration_score_data', tbOptions);

            _dataTable.SetParameters({
                EvaluateYear: fullYear
            });

            _dataTable.Init();


            $("#btnSearch").click(function () {

                var EvaluateYear = parseInt($("#EvaluateYear").val());

                if (isNaN(EvaluateYear) || (EvaluateYear < 1977 || EvaluateYear > 9999)) {

                    swal("提示", "请输入合法的年份", "warning");
                    return;
                }

                QueryObj = {
                    EvaluateYear: $("#EvaluateYear").val(),
                    DeptType: $("#DeptType").val(),
                };

                _dataTable.SetParameters(QueryObj);

                _dataTable.Refresh();
            });
        });

        function dept_type_select(value) {

            role = value;
            if ('' !== value) {
                tbOpts.fileName = value;
            }
            else {
                tbOpts.fileName = '综合得分';
            }
            App.setExportOptions(tbOpts);

            QueryObj = {
                EvaluateYear: $("#EvaluateYear").val(),
                DeptType: $("#DeptType").val()
            };

            _dataTable.SetParameters(QueryObj);
            _dataTable.Refresh();
        }

    </script>

}